<Window x:Class="SmartGirlAlgebra.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Smart Girl Algebra - Cheerleading Edition" 
        Height="700" Width="900"
        Background="{StaticResource BackgroundColor}"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryPink}" Padding="20">
            <StackPanel>
                <TextBlock Text="🎀 SMART GIRL ALGEBRA 🎀" 
                          FontSize="36" 
                          FontWeight="Bold" 
                          Foreground="White"
                          HorizontalAlignment="Center"/>
                <TextBlock Text="Cheerleading Edition - Learn Pre-Algebra!" 
                          FontSize="18" 
                          Foreground="White"
                          HorizontalAlignment="Center"
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Player Stats -->
        <Border Grid.Row="1" Background="{StaticResource LightPink}" Padding="15" Margin="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                    <TextBlock Text="👤 Cheerleader" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="PlayerNameText" Text="Player" FontSize="18" FontWeight="Bold" 
                              Foreground="{StaticResource SecondaryPurple}" HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                    <TextBlock Text="⭐ Level" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="LevelText" Text="1" FontSize="18" FontWeight="Bold" 
                              Foreground="{StaticResource SecondaryPurple}" HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                    <TextBlock Text="💎 Points" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="PointsText" Text="0" FontSize="18" FontWeight="Bold" 
                              Foreground="{StaticResource SecondaryPurple}" HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                    <TextBlock Text="🎀 Pom-Poms" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="PomPomsText" Text="0" FontSize="18" FontWeight="Bold" 
                              Foreground="{StaticResource SecondaryPurple}" HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="2" x:Name="ContentArea" Margin="20">
            <!-- Welcome Screen (Initial) -->
            <StackPanel x:Name="WelcomePanel" VerticalAlignment="Center">
                <TextBlock Text="Welcome to the Squad!" 
                          Style="{StaticResource TitleText}"
                          FontSize="42"/>
                
                <TextBlock Text="Enter your cheerleader name to begin:" 
                          FontSize="20" 
                          HorizontalAlignment="Center"
                          Margin="0,20,0,10"
                          Foreground="{StaticResource SecondaryPurple}"/>
                
                <TextBox x:Name="PlayerNameInput" 
                        Width="300" 
                        FontSize="18" 
                        Padding="10"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,20"/>
                
                <Button Content="🎉 Join the Squad!" 
                       Style="{StaticResource CheerButton}"
                       Click="StartGame_Click"
                       HorizontalAlignment="Center"
                       FontSize="20"
                       Padding="30,15"/>
            </StackPanel>

            <!-- Main Menu -->
            <StackPanel x:Name="MainMenuPanel" Visibility="Collapsed" VerticalAlignment="Center">
                <TextBlock Text="Choose Your Activity" 
                          Style="{StaticResource TitleText}"/>
                
                <Button Content="📚 Practice Routine - Solve Equations" 
                       Style="{StaticResource CheerButton}"
                       Click="PracticeRoutine_Click"
                       FontSize="18"/>
                
                <Button Content="🤸 Perform Stunts - Simplify Expressions" 
                       Style="{StaticResource CheerButton}"
                       Click="PerformStunts_Click"
                       FontSize="18"/>
                
                <Button Content="🎯 Cheer Competition - Mixed Challenges" 
                       Style="{StaticResource CheerButton}"
                       Click="CheerCompetition_Click"
                       FontSize="18"/>
                
                <Button Content="🏪 Pom-Pom Shop" 
                       Style="{StaticResource CheerButton}"
                       Click="PomPomShop_Click"
                       FontSize="18"/>
                
                <Button Content="📊 View Progress" 
                       Style="{StaticResource CheerButton}"
                       Click="ViewProgress_Click"
                       FontSize="18"/>
            </StackPanel>

            <!-- Game Screen (will be populated dynamically) -->
            <Grid x:Name="GamePanel" Visibility="Collapsed">
                <!-- Content will be added programmatically -->
            </Grid>
        </Grid>
    </Grid>
</Window>

